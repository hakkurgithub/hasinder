datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

model Haber {
  id        String   @id @default(cuid())
  baslik    String
  icerik    String
  resim     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}